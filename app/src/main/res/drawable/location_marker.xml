<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size android:height="140dp"
                  android:width="140dp" />
        </shape>
    </item>

    <item android:top="0dp" android:left="7dp" android:bottom="28dp" android:right="7dp">
        <shape android:shape="oval">
            <solid android:color="@color/color_2"/>
        </shape>
    </item>

    <item android:top="66dp" android:left="70dp" android:bottom="0dp" android:right="40dp">
        <rotate
            android:fromDegrees="-45"
            android:toDegrees="-45"
            android:pivotX="0"
            android:pivotY="100%" >
            <shape android:shape="rectangle">
                <solid android:color="@color/color_2" />
            </shape>
        </rotate>
    </item>
    <item android:top="66dp" android:left="40dp" android:bottom="0dp" android:right="70dp">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="100%"
            android:pivotY="100%" >
            <shape android:shape="rectangle">
                <solid android:color="@color/color_2" />
            </shape>
        </rotate>
    </item>

    <item android:top="22dp" android:left="32dp" android:bottom="46dp" android:right="32dp">
        <shape android:shape="oval">
            <solid android:color="@color/color_1"/>
            <size android:width="10dp"
                  android:height="10dp"/>
        </shape>
    </item>
</layer-list>
